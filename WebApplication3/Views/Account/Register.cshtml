@model WebApplication3.ViewModels.RegisterViewModel

<head>
    <style>
        input{
        margin: 10px;
         }
    </style>
</head>
<h2>Регистрация</h2>
<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="Email">Введите Email</label><br/>    
            <input type="text" asp-for="Email"/>
            <span asp-validation-for="Email"/>
        </div>
        <div>
            <label asp-for="Email">Введите Имя пользователя</label><br/>
            <input type="text" asp-for="UserName"/>
            <span asp-validation-for="UserName"/>
        </div>
        <div>
            <label asp-for="Password">Введите пароль</label><br/>
            <input asp-for="Password"/>
            <span asp-validation-for="Password"/>
        </div>
        <div>
            <label asp-for="PasswordConfirm">Повторите пароль</label><br/>
            <input asp-for="PasswordConfirm"/>
            <span asp-validation-for="PasswordConfirm"/>
        </div>
        <div>
            <input id="reg" class="btn btn-sm btn-primary" type="submit" value="Регистрация"/>
        </div>
    </div>
</form>